generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  flows     Flow[]
}

model Flow {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  ownerId   Int
  action    Json
  enabled   Boolean
  trigger   Json
  owner     User     @relation(fields: [ownerId], references: [id])
}
